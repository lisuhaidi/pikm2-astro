<style>
    .container {
        text-align: center;
        margin: 20px 0 0 0;
    }
    .container h1 {
        font-size: 10rem;
        margin: 0;
        color: #333;
        animation: float 2s infinite;
    }
    .container h2 {
        font-size: 2rem;
        color: #333;
    }
    .container p {
        font-size: 1.2rem;
        color: #666;
    }
    .container a {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        color: #fff;
        background-color: #333;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s;
    }
    .container a:hover {
        background-color: #f39c12;
    }
    @keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }
    svg {
        width: 100px;
        fill: #333;
        animation: rotate 4s infinite linear;
    }
    @keyframes rotate {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }
</style>