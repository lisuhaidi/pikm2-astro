---
import Layout from '../../../layouts/BaseLayout.astro';
import EditBio from '../../../components/EditBio.jsx';



const {id} = Astro.params

const endpoint = `https://pikm-pj8ksyy1gtrn.deno.dev/user/${id}`
// Fetch data dari API
const response = await fetch(endpoint);
if (!response.ok) {
  throw new Error('Failed to fetch message');
}
const user = await response.json();

const {_id, bio } = user;
---

<Layout title=Profil>
    <EditBio id={_id} bio={bio} client:only="react"/>
</Layout>